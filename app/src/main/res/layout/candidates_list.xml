<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/candidateItem"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- ImageView on the left -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilePhoto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/profile"
            app:shapeAppearanceOverlay="@style/round_img"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"/>

        <!-- LinearLayout to hold TextViews on the right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TextView at the top -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faaiz Sorathiya"
                android:textSize="18sp"
                android:padding="4dp"/>

            <!-- TextView at the bottom -->
            <TextView
                android:id="@+id/tvRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Developer at Amazon"
                android:maxLines="2"
                android:textSize="16sp"
                android:padding="4dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
